---
# https://css-tricks.com/a-responsive-grid-layout-with-no-media-queries/
css: |
  .grid-rigid {
    --grid-columns: 3;
    display: grid;
    grid-template-columns: repeat(var(--grid-columns), minmax(0, 1fr));
    grid-gap: 0em;
    padding: 0em;
    & .pane {
      &:hover, &:focus {
        background: #efefef;
      }
    }
  }
---
<div class="grid-rigid" style="
  {% if rows %}grid-row:auto/span {{ rows }};{% endif %}
  {% if columns %}--grid-columns:{{ columns }};{% endif %}
  ">
  {{ content | safe }}
</div>
