<ul>
  {% for dashboard in search.pages("dashboard", "title") | data %}
  <li>
    <a href="{{ dashboard.url }}">{{ dashboard.title }}</a>
  </li>
  {% endfor %}
</ul>

{# HEADLINES ACROSS TOP #}
{% comp 'grid.auto' %}
  {% comp 'grid.pane' %}
    <h2>Most recent long-term unemployed</h2>
    <p>{{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last }}</p>
  {% endcomp %}
  {% comp 'grid.pane' %}
    <h2>QLFS visualisation</h2>
    <p>{{ comp.viz.main({
      visualisations: search.data('dashboard/qlfs/index.njk').visualisations[1]
    }) | safe }}</p>
  {% endcomp %}
{% endcomp %}


{# Here's an alternative layout which is a bit more fluid and less regimented #}
{% comp 'grid.masonry' %}
  {% comp 'grid.block', { width: '100%', style: 'text-align:center;' } %}
    <h2>Masonry Layout</h2>
  {% endcomp %}
  {% comp 'grid.block' %}
    <p>The most recent long-term unemployment rate is {{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last | round(1) }}%</p>
  {% endcomp %}
  {% comp 'grid.block' %}
    <p>The most recent long-term unemployment rate is {{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last | round(1) }}%</p>
  {% endcomp %}
  {% comp 'grid.block', { width: '10rem' } %}
    <p>The most recent long-term unemployment rate is {{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last | round(1) }}%</p>
  {% endcomp %}
  {% comp 'grid.block', {  background: '#aaf' } %}
    <p>The most recent long-term unemployment rate is {{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last | round(1) }}%. This one has a different background colour!</p>
  {% endcomp %}
  {% comp 'grid.block' %}
    <p>The most recent long-term unemployment rate is {{ sources.qlfs.long_term_unemployed.columns.age_16_to_24_unemployed_over_12_months_rate_sa | last | round(1) }}%</p>
  {% endcomp %}
  {% comp 'grid.block', { width: '100%', style: 'text-align:center;' } %}
    <h3>More charts follow</h3>
  {% endcomp %}
  {% comp 'grid.block', { width: '20rem' } %}
    <p>{{ comp.viz.main({
      visualisations: search.data('dashboard/qlfs/index.njk').visualisations[1]
    }) | safe }}</p>
  {% endcomp %}
{% endcomp %}