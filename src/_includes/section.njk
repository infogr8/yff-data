    <h1>{{ title }}</h1>
  </header>

  {{ comp['tag-cloud']({ tags: tags }) | safe }}

  {{ summary | md | safe }}

  {% for block in blocks %}
    {{ comp.report.block(block) | safe }}
  {% endfor %}

{% endblock %}