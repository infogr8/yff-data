{% extends 'layout.njk' %}

{% block main %}
  <div class="page-title">
	<div class="wrapper">
		<a href='{{ report }}'>Go back to full report</a>
		<h1>{{ title }}</h1>
	</div>
  </div>

  <div class="wrapper">
  <aside>
  {{ comp['tag-cloud']({ tags: tags }) | safe }}
  </aside>

  <section>
  {{ summary | md | safe }}
  </section>

  {% for block in blocks %}
    {{ comp.report.block(block) | safe }}
  {% endfor %}
  </div>
{% endblock %}