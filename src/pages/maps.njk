---
title: Maps
url: /maps/
nav_order:
  v2: 40   
---

{% comp 'grid.auto', { min_width: '30rem' } %}
{% for page in search.pages("maps", "priority=desc title=asc") | data %}
    {% comp 'grid.pane', { link: page.url, extra_classes: extra_classes or 'turquoise-bg' } %}
      <h2>{{ page.title }}</h2>

      <div data-injector-url="{{ page.url }}" data-injector-selector="{{ page.featured }}"></div>

      {% if page.summary %}
      <div class="summary embolden-first">
          {{ page.summary  | md | striplinks | safe }}
      </div>
      {% endif %}

      {% if page.topics %}
      <div>
          {{ comp.tagCloud({ tags: page.topics }) | safe }}
      </div>
      {% endif %}
    {% endcomp %}

{% endfor %}

{% endcomp %}

