---
nav_order: 20
title: Reports
---
  <div class="page-title">
	<div class="holder wrapper">
		<h1>Report Dashboard</h1>
	</div>
  </div>

  <div class="wrapper holder">
	{% comp 'grid.auto', { min_width: '30em' } %}
	  {% for page in search.pages('report', 'date') %}
		{% comp 'grid.pane', { link: page.data.url } %}
		  <h2>{{ page.data.title }}</h2>
		  <div class="post-date">{{ page.data.publication_date | date('dd MMMM yyyy') }}</div>
		  <p>
			{% if page.data.visualisations %}
			  {{ comp.viz[page.data.visualisations[0].type](page.data.visualisations[0].config) | safe }}
			{% endif %}
			{{ page.data.summary | md | striplinks | safe  }}
		  </p>
		{% endcomp %}
	  {% endfor %}
	{% endcomp %}
  </div>