          longitude: 0
      legend:
        - value: 30
          label: "▲ Increase"
        - value: 20
          label: ""
        - value: 10
          label: ""
        - value: 0
          label: ""
        - value: -10
          label: ""
        - value: -20
          label: ""
        - value: -30
