      value: "Hours Growth (%)"	# Column heading for value
      scale: Diverging
      min: -30
      max: 30
      columns:
        - name: "Label"
          template: "{{ NUTS18NM }}: {{ Hours Growth (%) }}%"
      places:
        - name: London
          text-anchor: start
          longitude: 0.8
          latitude: 51.4
        - name: Liverpool
          text-anchor: end
        - name: Swansea
